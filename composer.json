{
    "name": "spryker-sdk/azure-php-client",
    "type": "library",
    "description": "Azure Repos client for PHP",
    "license": "proprietary",
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-simplexml": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.5",
        "spryker/code-sniffer": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Client\\": "src/Client/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ClientTest\\": "tests/Client/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "stan": "phpstan analyze src/",
        "linters": [
            "@cs-fix",
            "@cs-check",
            "@stan"
        ],
        "tests": "phpunit tests/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
